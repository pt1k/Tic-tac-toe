{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build ./ttt",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Make Clean",
            "type": "shell",
            "command": "make clean",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "RUN ./ttt",
            "type": "shell",
            "command": "${workspaceFolder}/ttt",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "RUN ./ttt console",
            "type": "shell",
            "command": "${workspaceFolder}/ttt console",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }

    ]
}